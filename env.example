# Google Ads - Conversion Tracking
NEXT_PUBLIC_GOOGLE_ADS_ID=AW-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_CONVERSION_LABEL=conversion-label

# Google Tag Manager (Opcional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ============================
# META ADS (FACEBOOK/INSTAGRAM)
# ============================
# Facebook Pixel ID
NEXT_PUBLIC_FB_PIXEL_ID=123456789012345

# Facebook Catalog ID (para produtos)
NEXT_PUBLIC_FB_CATALOG_ID=catalog-id

# ============================
# HOTJAR - HEATMAPS & GRAVAÇÕES
# ============================
NEXT_PUBLIC_HOTJAR_ID=1234567

# ============================
# MANYCHAT - AUTOMAÇÃO WHATSAPP
# ============================
NEXT_PUBLIC_MANYCHAT_WIDGET_ID=widget-id
NEXT_PUBLIC_MANYCHAT_PAGE_ID=page-id

# ============================
# TWITTER ADS (OPCIONAL)
# ============================
NEXT_PUBLIC_TWITTER_PIXEL_ID=twitter-pixel-id

# ============================
# EMAIL MARKETING
# ============================
# Mailchimp API
MAILCHIMP_API_KEY=your-mailchimp-api-key
